<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rolph.festafimdeano">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.DetailsActivity"/> //QUANDO TAG NÃO TEM CORPO - fechar a tag dessa forma "/>" para evitar redundâncias
        <activity android:name=".view.MainActivity">
         /*GERENCIAR QUAL TELA ABRIRÁ COMO PRINCIPAL - copiar e usar a TAG "intent-filter" dentro da TAG "activity" que precisar*/
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>